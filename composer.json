{
    "name": "lorenzo/row-locker",
    "description": "Plugin to lock database rows using the CakePHP ORM",
    "type": "cakephp-plugin",
    "license": "MIT",
    "require": {
        "php": ">=7.2.0",
        "cakephp/orm": "~4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "cakephp/cakephp": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "RowLocker\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "RowLocker\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests"
        }
    }
}
